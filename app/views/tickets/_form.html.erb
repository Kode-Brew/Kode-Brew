 <%= simple_form_for @ticket do |f| %>
      <%= f.input :status, label: "Status", as: :select, collection: [['Em Aberto','Em Aberto'], ['Em Andamento','Em Andamento'], ['Finalizado','Finalizado']] %>
      <%= f.input :task,  as: :select, collection: current_user.tasks.all.map { |u| [u.name, u.id] }, input_html: {class: "card_input_form"}, label: "Suas Tarefas:" %>
      <%= f.input :category, label: "Categoria",collection: Ticket.categories.keys.map { |type| [type.humanize, type] }  %>
      <%= f.input :description, label: "Descrição", :as => :text  %>
      <%= f.button :submit, class:'btn btn-primary' %>
    <% end %>
