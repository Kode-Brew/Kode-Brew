<div class="container">
    <h1 class= "text-center"><i class="fa-solid fa-ticket"> &nbsp;</i> Tickets</h1>
          <div class="row card_main justify-content-center my-3">
            <div class=" row mt-4">
            <% offset = params[:set].to_i || 0 %>
            <div class="col-6">
              <h2>Tickets em aberto</h2>
            </div>
            <div class="col-6">
              <p class="icon-lg-right "> <% if offset > 0 %>
                  <%= link_to tickets_path(set: offset-5), class: "text_green underline-offset #{'text-decoration-none' unless params[:filter] == "1"}" do %>
                    <i class="fa-solid fa-arrow-left"></i>
                  <% end %>
                <% end %>
                Página <%=(offset/5)+1 %>
                <% if offset+5 < @tickets.count %>
                  <%= link_to tickets_path(set: offset+5), class: "text_green underline-offset #{'text-decoration-none' unless params[:filter] == "1"}" do %>
                    <i class="fa-solid fa-arrow-right"></i>
                  <% end %>
                <% end %>
              </p>
            </div>
              <% @tickets.limit(5).offset(offset).each do |ticket| %>
               <div class="row m-1">
                <div class="col-sm-10  mx-auto">
                  <%= link_to ticket_path(ticket), class:"text-decoration-none" do%>
                    <div class="card_tickets border-dark ">
                    <div class="row">
                        <div class="col-md-3">
                          <p><strong>Tarefa:</strong> <%= ticket.task.name %></p>
                        </div>
                        <div class="col-md-3">
                          <p class=""><strong>Projeto:</strong> <%= ticket.task.sprint.project.name %></p>
                        </div>

                        <div class="col-md-3">
                          <p><strong>Aluno:</strong> <%= ticket.task.user.name %></p>
                        </div>
                        <div class="col-md-3">
                          <p class=""><strong>Categoria:</strong> <%= ticket.category %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
                <% if params[:filter].nil? %>
                  <div class="col-md-2 my-auto p-0 text-center">
                    <%= link_to ticket_path(ticket,ticket:{status: "Em Andamento"}), data: {turbo_method: :patch}, class:'text-decoration-none button_confirm py-2 px-3' do %>
                              Assumir
                        <% end %>
                  </div>
                <% end %>
                    </div>
              <% end %>
            </div>

           <div class="col-sm-3 my-4 text-center">
              5 Tickets por página
           </div>


          </div>
</div>
