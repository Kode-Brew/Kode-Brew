<div class="container">
    <h1 ></i> Meus Tickets</h1>
  <div class="row justify-content-center my-3">
    <div class="col-md-3 my-2">
      <%= link_to "Tickets em andamento", mytickets_path, class: "h5 underline-offset #{'text-decoration-none' unless params[:filter].nil?}" %>
    </div>
    <div class="col-md-3 my-2">
      <%= link_to "Tickets Finalizados", mytickets_path(filter: 1), class: "h5 underline-offset #{'text-decoration-none' unless params[:filter] == "1"}" %>
    </div>
    <div class="col-md-10 card_main">
      <h2>Tickets  (<%= @tickets.count %>)
      </h2>
      <% @tickets.each do |ticket| %>
      <div class="row m-1">
        <div class="col-sm-10  mx-auto">
          <%= link_to ticket_path(ticket), class:"text-decoration-none" do%>
            <div class="card_tickets border-dark row">
                <div class="col-md-2 px-2">
                  <p><strong>Tarefa:</strong> <%= ticket.task.name %></p>
                </div>
                <div class="col-md-4 px-2">
                  <p class=""><strong>Projeto:</strong> <%= ticket.task.sprint.project.name %></p>
                </div>
                <div class="col-md-3 px-2">
                  <p><strong>Aluno:</strong> <%= ticket.task.user.name %></p>
                </div>
                <div class="col-md-3 px-2">
                  <p class=""><strong>Categoria:</strong> <%= ticket.category %></p>
                </div>
            </div>
          <% end %>
        </div>
        <% if params[:filter].nil? %>
          <div class="col-md-2 my-auto p-0 text-center">
            <%= link_to ticket_path(ticket,ticket:{status: "Finalizado"}), data: {turbo_method: :patch}, class:'text-decoration-none button_confirm py-2 px-3' do %>
                      Finalizar
                <% end %>
           </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
