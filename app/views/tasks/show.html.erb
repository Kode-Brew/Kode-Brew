<div class="container mt-2">
  <h1>Tarefa</h1>

  <div class= "small-cards-container">
    <%# 1st small-card %>
    <div class= "small-card">
      <p><i class="fa-regular fa-star"></i> Pontuação</p>
      <h3 style="color:#008100;">5 pontos</h3>
    </div>

    <%# 2nd small-card %>
    <%= link_to task_path, class: "text-decoration-none" do %>
      <div class= "small-card">
        <p><i class="fa-solid fa-mug-saucer"></i>  Projeto Atual</p>
        <h4><%=  %></h4>
        <footer><%= link_to "detalhes", task_path, class: "text-decoration-none" %></footer>
      </div>
    <% end %>

    <%# 3rd small-card %>
    <%= link_to task_path do %>
      <div class= "small-card">
        <p><i class="fa-regular fa-comments"></i> Tire dúvidas</p>
        <h4 style="color:#008100;"> Abrir um Ticket</h4>
        <%# <p id="small-subtitle">com um Professor ou TA</p> %>
      </div>
    <% end %>
  </div>


  <div class = 'card_main'>
    <div class="main-card-header">
      <h2><i class="fa-solid fa-bars-progress"></i>  <%= @task.name %></h2>
    </div>

    <div class="objective-card">
        <h5>Descrição:</h5>
        <p><%= @task.description %></p>
      </div>

    <div class = 'task-content'>
      <div class = 'task-item'>
        <p>Responsável:</p>
        <div class = 'task-inline'>
          <img src="https://kitt.lewagon.com/placeholder/users/perrigii" <%# adicionar o caminho para a foto do membro%>
                alt="Foto do Membro" class="me-3"
                style="width: 50px; height: 50px; border-radius: 50%;">

          <h5><%= @task.user.name %></h5>
        </div>
      </div>

      <div class = 'task-item task-central'>
        <p>Status:</p>

          <%= simple_form_for @task do |f| %>
            <div class="task-inline">
              <div class="select-input">
                <%= f.input :status, as: :select, collection: [['Não Iniciada', 'Não Iniciada'], ['Em Andamento', 'Em Andamento'], ['Revisão', 'Revisão'], ['Finalizada', 'Finalizada']], input_html: {class: "card_input_form"}, label: false %>
              </div>
              <div class="submit-button">
                <%= f.button :submit, "Atualizar", class:'button_confirm' %>
              </div>
            </div>
          <% end %>
      </div>


      <div class = 'task-item task-central'>
        <p>Pontuação:</p>

        <h5><%= @task.points %> pontos</h5>
      </div>

      <div class = 'task-item task-central'>
        <p>Prioridade:</p>
        <h5><%= @task.priority %></h5>
      </div>
    </div>
  </div>
</div>
