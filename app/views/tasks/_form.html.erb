 <%= simple_form_for @task do |f| %>
      <%= f.input :name, label: "Nome" %>
      <%= f.input :priority, label: "Prioridade", as: :select, collection: [['Baixa', 'baixa'], ['Média', 'media'], ['Média-Alta', 'media-alta'], ['Alta', 'alta']] %>
      <%= f.input :description, label: "Descrição" %>
      <%= f.input :status, label: "Status", as: :select, collection: [['Não iniciada','nao-inicicada'], ['Em andamento','em-andamento'], ['Em revisão','revisao'], ['Finalizada','finalizada']] %>
       <%= f.input :points, label: "Pontos" %>
      <%= f.button :submit, class:'btn btn-primary' %>
    <% end %>
