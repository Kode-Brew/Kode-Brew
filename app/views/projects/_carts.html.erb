<div class="container">

  <div class="card-btn  row my-4 ">

    <div class="col-sm-4 ">
      <%= link_to  "Todos os projetos",myprojects_path(), class:"h2"   %>
    </div>
    <div class="col-sm-4">
      <%= link_to  "Projetos em andamento",myprojects_path(filter: "Em andamento"), class:"h2"   %>
    </div>
     <div class="col-sm-4">
      <%= link_to  "Projetos finalizados",myprojects_path(filter: "finilizado"), class:"h2"   %>
    </div>


  </div>

   <div id="cart-" class="table-responsive col-12">
    <table id="search-results-bottom" class="table table-dark table-striped table-bordered ">
      <thead>
        <tr>
          <th class='text-center' scope="col">Nome</th>
          <th class='text-center' scope="col">Data</th>
          <th class='text-center d-none d-sm-table-cell' scope="col">Status</th>
          <th class='text-center' scope="col">Função</th>
          <th class='text-center' scope="col">Tarefas Entregues</th>
          <th class='text-center' scope="col">Pontos</th>

        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
            <tr>
         <%= link_to  project_path(project), class:"btn btn-primary" do  %>
              <td class='text-center'><%=  project.name%></td>
              <td class='text-center'><%= project.date_start_project&.strftime("%d/%m/%y") || "---" %>    <%= project.date_end_project&.strftime("%d/%m/%y") || "---" %></td>
              <td class='text-center d-none d-sm-table-cell'><%= project.status %></td>
              <td class='text-center'><%= project.user_type %> </td>
               <td class='text-center'><%= project.tasks_performed %> </td>
              <td class='text-center'><%= project.total_points %> </td>
          <% end %>
            </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
