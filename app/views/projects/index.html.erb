
  <div class="card-btn  row my-4 ">
    <div class="col-sm-3">
    <%= link_to "Todos os projetos", projects_path, class: "h5 #{'text-decoration-none' unless params[:filter].nil?}" %>
  </div>
  <div class="col-sm-3">
    <%= link_to "Projetos em andamento", projects_path(filter: "Em andamento"), class: "h5 #{'text-decoration-none' unless params[:filter] == 'Em andamento'}" %>
  </div>
  <div class="col-sm-3">
    <%= link_to "Projetos finalizados", projects_path(filter: "finilizado"), class: "h5 #{'text-decoration-none' unless params[:filter] == 'finilizado'}" %>
  </div>
  </div>
<div class="row">
  <div  class="table-responsive col-10 px-0">
    <table id="search-results-bottom" class="table table_main ">
      <thead>
        <tr>
          <th class=' h5 p-3' >Projetos</th>
          <th class='text-center h5 p-3' >Data de início</th>
          <th class='text-center h5 p-3' >Data de Fim(Prévia)</th>
          <th class='text-center h5 p-3 d-none d-sm-table-cell' >Status</th>
          <th class='text-center h5 p-3' >Cliente</th>

        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
            <tr>
              <td class=' b_g_white h6 p-4'><%=  link_to project.name.titleize, project_path(project), class: "text-decoration-none text_dgray" %>
                <%= link_to edit_project_path(project), class:"text-decoration-none text_green" do %>
                  &nbsp;&nbsp;<i class="fa-solid fa-pen-to-square"></i>&nbsp;&nbsp;
                <% end %>
                <%= link_to project_path(project), data: {turbo_method: :delete}, class:'text-danger' do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </td>
              <td class='text-center b_g_white h6 p-4'><%= project.date_start_project&.strftime("%d/%m/%y") || "---" %></td>
              <td class='text-center b_g_white h6 p-4'><%= project.date_end_project&.strftime("%d/%m/%y") || "---" %></td>
              <td class='text-center b_g_white h6 p-4 d-none d-sm-table-cell'><%= project.status %></td>
              <td class='text-center b_g_white h6 p-4'><%= project.client.name || "---" %></td>


            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
