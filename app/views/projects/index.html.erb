<div class="container text-center">
  <h1>Projects#index</h1>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-4 border border-dark m-2">
        <h2><%= project.name %></h2>
        <p><%= project.description %></p>
        <p><%= project.is_active? %></p>
        <div class="d-flex align-items-end flex-column">
          <div class="mt-auto  p-2">
            <%= link_to 'Show', project_path(project), class:"btn btn-primary" %>
            <%= link_to 'Edit', edit_project_path(project), class:"btn btn-success" %>
            <%= link_to project_path(project), data: {turbo_method: :delete}, class:'btn btn-danger' do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="m-2 p-2">
    <%= link_to "new project".html_safe, new_project_path, class: "btn btn-warning" %>
  </div>


</div>
