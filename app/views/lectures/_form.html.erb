        <%= form.input :video, input_html: { class: 'card_input_form' } %>
        <%= form.input :slide, as: :text, input_html: { class: 'card_input_form' } %>
     <div class="row">
      <div class="col-6">
       <%= form.input :source, input_html: { class: 'card_input_form' } %>
      </div>
      <div class="col-6">
         <%= form.input :user_id, as: :select, collection: User.all.map { |u| [u.name, u.id] }, label: "ResponsÃ¡vel pela aula", input_html: { class: "card_input_form" } %>
