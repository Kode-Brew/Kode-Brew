<div class="container text-center">
  <%= link_to "Adicionar novo membro no projeto", new_project_member_path, class: "btn btn-outline-primary mt-3 mb-3" %>
  <h1>Membros do projeto</h1>
  <h3><%= "Total de membros: #{@project_members.size}" %></h3>
  <ul style="list-style: none;">
    <% @project_members.each do |project_member| %>
      <li><%= link_to project_member.user_id, project_member %></li>
      <li><%= link_to project_member.project_id, project_member %></li>
    <% end %>
  </ul>
</div>
