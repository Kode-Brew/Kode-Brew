<div class="container text-center">
  <div class="row mt-5">
    <div class="col-sm-4 mx-5 card card_main">
      <h2>Membros de projetos</h2>
      <h3><%= "Total de membros: #{@project.project_members.size}" %></h3>
        <% @project.project_members.each do |project_member| %>
          <div class="card card_project_member border-dark py-2 m-3">
            <div class="row align-items-center">
              <div class="col-3 p-0">
                 <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar-large" %>
              </div>
              <div class="col-3 p-0">
                 <strong><%= project_member.user.name %></strong> <br><%= project_member.user_type %>
              </div>
              <div class="col-3 p-0">
                 Pontos: <%= project_member.total_points %>
              </div>
              <div class="col-3 p-0">
               <%= link_to project_member_path(project_member), data: {turbo_method: :delete, turbo_confirm: "Tem certeza que quer remover o usuÃ¡rio"} do %>
                 <i class="fa-solid fa-circle-minus icon_delete"></i>
               <% end %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
    <div class="col-sm-4 mx-5">
          <%= render  partial: 'form', locals: { test: 1 } %>
          <%= render partial: 'form', locals: { test: 0 } %>
    </div>
  </div>
</div>
