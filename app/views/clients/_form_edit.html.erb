<h2 class="title mt-4 text-center"> Editar Cliente</h2>

<div class="form-container">
  <%= simple_form_for @client, html: {class:"form"} do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :category,
                  label: 'Categoria',
                  collection: Client::CATEGORIES,
                  include_blank: false,
                  required: false,
                  autofocus: true,
                  input_html: { class: "input" },
                  label_html: { class: "label" } %>
      <%= f.input :name,
                  label: 'Nome',
                  required: false,
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :address, as: :text,
                  label: 'EndereÃ§o',
                  required: false,
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :email,
                  label: 'E-mail',
                  required: false,
                  placeholder: 'exemplo@dominio.com',
                  type: 'email',
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :cell_phone,
                  label: 'Celular',
                  required: false,
                  placeholder: '(XX) XXXXX-XXXX',
                  input_html: {class: 'input', placeholder: 'DDD Telefone'},
                  label_html: {class: 'label'}%>
      <%= f.input :photo,
                  label: 'Logo cliente',
                  input_html: {class: 'input', as: :file},
                  label_html: {class: 'label'}%>
      <p class='text-center'>Altere os campos que desejar.</p>
    </div>

    <div class="form-actions d-flex justify-content-between">
      <%= link_to :back do %>
        <i class="fa-solid fa-reply fs-2 mt-2" style="color: #008100;"></i>
      <% end %>
      <%= f.button :submit, 'Editar Cliente', class: "submit" %>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center mt-3"><%= button_to "Deletar cliente", client_path(@client), data: { turbo_confirm: "Deseja realmente excluir o cliente ?" }, method: :delete, class: "account_destroy" %></div>
