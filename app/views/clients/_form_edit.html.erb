<h2 class="title mt-4 text-center"> Editar Cliente</h2>

<div class="form-container">
  <%= simple_form_for @client, html: {class:"form"} do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :category,
                  label: 'Categoria',
                  collection: Client::CATEGORIES,
                  hint: "Deixe em branco se não quiser alterar",
                  include_blank: false,
                  required: false,
                  autofocus: true,
                  input_html: { class: "input" },
                  label_html: { class: "label" } %>
      <%= f.input :name,
                  label: 'Nome',
                  required: false,
                  hint: "Deixe em branco se não quiser alterar",
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :address,
                  label: 'Endereço',
                  required: false,
                  hint: "Deixe em branco se não quiser alterar",
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :email,
                  label: 'E-mail',
                  required: false,
                  hint: "Deixe em branco se não quiser alterar",
                  placeholder: 'exemplo@dominio.com',
                  type: 'email',
                  input_html: {class: 'input'},
                  label_html: {class: 'label'} %>
      <%= f.input :cell_phone,
                  label: 'Celular',
                  required: false,
                  hint: "Deixe em branco se não quiser alterar",
                  placeholder: '(XX) XXXXX-XXXX',
                  input_html: {class: 'input', placeholder: 'DDD Telefone'},
                  label_html: {class: 'label'}%>
      <%= f.input :photo,
                  label: 'Foto do cliente',
                  input_html: {class: "input"},
                  label_html: {class: 'label'}%>
      <p>Campos marcados com "*" são obrigatórios.</p>
    </div>

    <div class="form-actions d-flex justify-content-between">
      <%= link_to :back do %>
        <i class="fa-solid fa-reply fs-2 mt-2" style="color: #008100;"></i>
      <% end %>
      <%= f.button :submit, 'Editar Cliente', class: "submit" %>
    </div>
  <% end %>
</div>
