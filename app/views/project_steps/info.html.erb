<%= simple_form_for @project, method: :post do |f| %>

  <%= f.input :name, label: "Nome" %>
  <%= f.input :category, label: "Categoria" %>
  <%= f.input :description, label: "Descrição" %>
  <%#= f.submit 'Continuar', name: "next", class:'btn btn-primary' %>

<% end %>

<%= simple_form_for @project, url: wizard_path, method: :put do |f| %>

  <%= f.input :client,  as: :select, collection: Client.all.map { |u| [u.name, u.id] }, input_html: {class: "card_input_form"}, label: "Cliente" %>
  <%= f.submit 'Continuar', name: "next", class:'btn btn-primary' %>
  <%= link_to "Pular etapa", next_wizard_path %>
<% end %>
